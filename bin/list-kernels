#!/bin/bash
#
# List installed kernel packages.


format='${Status} ${Package} ${Version}\n'
packages="linux-image-[0-9]*-*"
current=$(uname -r)

dpkg-query -W -f "$format" "$packages" | awk -v cur=$current '
    $3 == "installed" {
        package = $4;
        sub("linux-image-", "", package);

        version = $5;
        is_cur = (package == cur);

        printf("%s %s [%s]\n", (is_cur ? "*" : " "), package, version);
    }'

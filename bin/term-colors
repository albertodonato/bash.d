#!/bin/bash
# shellcheck disable=SC1117
#
# Print the 256 terminal colors.


declare -A modifiers=(
    [bold]='1'
    [dim]='2'
    [reverse]='3'
    [underline]='4'
)

[ "$1" ] && modifier="${modifiers[$1]}"
[ "$modifier" ] && prefix="$modifier;"

for i in {0..255}; do
    printf -v code '%03d' $i
    echo -ne "\e[${prefix}38;05;${code}m"
    echo -n "\e[${prefix}38;05;${code}m"
    echo -ne '\e[m  '
    [ $((i % 8)) == 7 ] && echo
done

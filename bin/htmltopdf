#!/bin/bash -e

if [ $# -ne 2 ]; then
    echo "Usage $(basename "$0") <html> <pdf>"
    exit 1
fi

source="$1"
dest="$2"

chromium \
    --incognito \
    --headless \
    --virtual-time-budget=100 \
    --run-all-compositor-stages-before-draw \
    --no-pdf-header-footer \
    --print-to-pdf="$dest" \
    "$source"

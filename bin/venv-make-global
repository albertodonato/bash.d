#!/bin/bash -e
#
# Create or update the virtualenv for globally-available Python applications.
#

# shellcheck source=lib/devel.sh
. "$SYSTEM_SH_LIB_DIR/devel.sh"

declare -a PACKAGES=(
    black
    build
    flake8
    flake8-pyproject
    ipython
    isort
    mypy
    pyproject-fmt
    pyupgrade
    setuptools
    sphinx-autodoc-typehints
    sphynx
    tox
    tox-ini-fmt
    twine
)

mkvenv "$HOME/venv" "${PACKAGES[@]}" "$@"
